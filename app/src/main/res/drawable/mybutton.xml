<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <padding android:bottom="1dp"></padding>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="@color/brightText" />
            <solid android:color="@color/archerGray"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/wechatGreen" />
            <gradient android:angle="-90" android:startColor="@color/wechatGreen" android:endColor="@color/wechatGreen" />
        </shape>
    </item>
</selector>